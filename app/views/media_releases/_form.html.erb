
<%= simple_form_for(@media_release) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :hyperlink %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
