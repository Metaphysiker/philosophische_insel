<p id="notice"><%= notice %></p>

<h1>Search Games</h1>

<table>
  <thead>
    <tr>
      <th>Cookie</th>
      <th>Category</th>
      <th>Identifier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @search_games.each do |search_game| %>
      <tr>
        <td><%= search_game.cookie %></td>
        <td><%= search_game.category %></td>
        <td><%= search_game.identifier %></td>
        <td><%= link_to 'Show', search_game %></td>
        <td><%= link_to 'Edit', edit_search_game_path(search_game) %></td>
        <td><%= link_to 'Destroy', search_game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Search Game', new_search_game_path %>
