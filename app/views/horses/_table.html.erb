<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Kommentar</th>
    </tr>
  </thead>
  <tbody>
    <% horses.each do |horse| %>
      <tr>
        <td>
          <%= link_to horse.name, edit_horse_path(horse) %>
        </td>
        <td><%= horse.comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>
