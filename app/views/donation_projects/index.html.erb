<p id="notice"><%= notice %></p>

<h1>Donation Projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Amount needed total</th>
      <th>Amount already received</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donation_projects.each do |donation_project| %>
      <tr>
        <td><%= donation_project.title %></td>
        <td><%= donation_project.description %></td>
        <td><%= donation_project.amount_needed_total %></td>
        <td><%= donation_project.amount_already_received %></td>
        <td><%= link_to 'Show', donation_project %></td>
        <td><%= link_to 'Edit', edit_donation_project_path(donation_project) %></td>
        <td><%= link_to 'Destroy', donation_project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

