<div id="<%= dom_id veganuary_item %>" class="container my-4 blogger-sans">

  <% unless veganuary_item.published == "true" %>
    <%= render 'form', veganuary_item: veganuary_item %>

    <hr />
  <% end %>

  <h2 id="vorschau">Vorschau</h2>
  <div class="row row-cols-1 row-cols-md-3 g-4">

    <div class="col">
      <%= render "veganuary_items/card", veganuary_item: veganuary_item %>

    </div>

  </div>

  <% if veganuary_item.addresses.split("\n").count == 1 %>
    <p class="mt-3">
      <strong>Standort</strong>
    </p>
  <% elsif veganuary_item.addresses.split("\n").count > 1 %>
    <p class="mt-3">
      <strong>Standorte</strong>
    </p>
  <% end %>
  <% veganuary_item.addresses.split("\n").each do |line| %>
    <% unless line.blank? %>
    <div class="my-2">
    <p>
      <strong>
        Adresse:
      </strong> <%= line %>
    </p>
    <iframe
    width="100%"
    height="250"
    style="border:0"
    loading="lazy"
    allowfullscreen
    referrerpolicy="no-referrer-when-downgrade"
    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyADpUPkgW9zvI1NstN5U1hfBICUKg9dne0
      &q=<%= CGI.escape line %>">
  </iframe>
    <% end %>
    </div>
  <% end %>


</div>
