<div class="container my-4">
<div id="<%= dom_id veganuary_item %>">
  <h1>Neuer Eintrag</h1>
  <%= render 'form', veganuary_item: veganuary_item %>

  <hr />

  <h2>Vorschau</h2>
  <hr />
  <div class="row">

    <div class="col-12 col-md-6 bg-light">
      <div class="row">
        <div class="col-2">
          <% if veganuary_item.company_logo.attached? %>
            <%= image_tag veganuary_item.company_logo, class: "img-fluid "%>
          <% end %>
        </div>
        <div class="col-10">
          <h1> <%= veganuary_item.company_name %></h1>
        </div>
      </div>

      <p class="small text-muted">
        <%= t(veganuary_item.category) %>
      </p>

      <p>
        <%= simple_format(veganuary_item.company_description) %>
      </p>

      <p>
        <strong>Unser Veganuary-Angebot:</strong><br />
        <%= simple_format(veganuary_item.offer) %>
      </p>

      <p class="text-center">
        <%= link_to "Zur Webseite", veganuary_item.url, class: "btn btn-primary" %>
      </p>
    </div>

    <div class="col-12 col-md-6">
      <% veganuary_item.offer_images.each do |image| %>
        <%= image_tag image, class: "img-fluid", style: "height: 200px;"%>
      <% end %>
    </div>

  </div>

  <% veganuary_item.addresses.split("\n").each do |line| %>
    <% unless line.blank? %>
    <div class="my-2">
    <p>
      <strong>
        Adresse:
      </strong> <%= line %>
    </p>
    <iframe
    width="100%"
    height="250"
    style="border:0"
    loading="lazy"
    allowfullscreen
    referrerpolicy="no-referrer-when-downgrade"
    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyADpUPkgW9zvI1NstN5U1hfBICUKg9dne0
      &q=<%= CGI.escape line %>">
  </iframe>
    <% end %>
    </div>
  <% end %>



</div>

</div>
