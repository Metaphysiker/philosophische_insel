<%= tinymce_assets %>
<%= tinymce %>
<%= simple_form_for(@veganuary_item, remote: true) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%#= f.input :category %>
    <div class="mb-4">
    <%= f.input :category, collection: VeganuaryItem.category_options.map {|option| [t(option), option]}, label_html: { class: 'fw-bold' } %>
    </div>

    <div class="mb-4">
    <%= f.input :company_name, label_html: { class: 'fw-bold' } %>
    </div>

    <div class="mb-4">
      <p>
        <strong>
          Logo des Unternehmens
          </strong>
        <br>
        <%= f.file_field :company_logo, label_html: { class: 'fw-bold' } %>
      </p>
    </div>

    <div class="mb-4">

      <p>
        <strong>
          Kurze Beschreibung des Unternehmens
          </strong>
      </p>
      <%= f.text_area :company_description, :class => "tinymce", :rows => 5, label_html: { class: 'fw-bold' } %>

    </div>

    <div class="mb-4">
      <%= f.input :url, label_html: { class: 'fw-bold' } %>

    </div>

    <div class="mb-4">
      <p>
        <strong>
          Beschreibung des Angebots
          </strong>
      </p>

      <%= f.text_area :offer, :class => "tinymce", :rows => 5, label_html: { class: 'fw-bold' } %>
    </div>
    <hr>
    <p>
      <strong>Falls vorhanden: </strong> 1-3 Bilder vom Angebot hochladen
    </p>
    <div class="mb-4">
      <p>
        Bild vom Angebot (1)<br>
        <%= f.file_field :offer_images1, label_html: { class: 'fw-bold' } %>
      </p>
    </div>

    <div class="mb-4">
      <p>
        Bild vom Angebot (2)<br>
        <%= f.file_field :offer_images2, label_html: { class: 'fw-bold' } %>
      </p>
    </div>

    <div class="mb-4">
      <p>
        Bild vom Angebot (3)<br>
        <%= f.file_field :offer_images3, label_html: { class: 'fw-bold' } %>
      </p>
    </div>
    <hr>

    <div class="mb-4">
      <p>
        <strong>
          Falls vorhanden:
          </strong>
          1-3 Standorte angeben.
      </p>
      <%= f.input :addresses, label_html: { class: 'fw-bold' } %>
    </div>
    <div class="mb-4">
      <p>
        Haben Sie mehr als 3 Standorte? Bitte schreiben Sie eine e-Mail an <%= mail_to "sandro@vegan.ch", "sandro@vegan.ch" %>, dann finden wir gemeinsam eine LÃ¶sung.
      </p>

    </div>


  </div>

  <div class="form-actions">
    <%= f.button :submit, "Vorschau aktualisieren", class: "btn btn-success my-4" %>
  </div>

  <% if false %>
  <div class="form-actions">
    <%= f.button :submit, "Speichern und verlassen", class: "btn btn-primary my-4" %>
  </div>
  <% end %>

<% end %>
