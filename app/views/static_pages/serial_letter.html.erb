<div class="container my-3">
  <h1>Serienbriefe erstellen</h1>

  <div class="card">
  <div class="card-body">

    <%= form_with url: "/search", method: :get do |form| %>
    <div class="mb-3">
      <%= form.label :csv, "CSV hochladen" %>
      <br />
      <%= form.file_field :csv %>
    </div>
    <div class="mb-3">
      <%= form.label :template, "Vorlage auswählen" %>
      <br />
      <%= form.select :template, [["Spendenbestätigung", "spendenbestaetigung"], ["Einladung", "einladung"]], {}, {class: "form-select"} %>
    </div>
    <div class="mb-3">
      <%= form.submit "Serienbrief erstellen", class: "btn btn-primary" %>
    </div>

    <% end %>

  </div>
</div>




</div>
